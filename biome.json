{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "*.cjs",
      "*.js",
      "*.mjs",
      "assets/src/**",
      "!assets/src/scripts/__tests__/fixtures",
      "!assets/src/scripts/coverage"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "domains": {
      "react": "all",
      "project": "all"
    },
    "rules": {
      "recommended": true,
      "a11y": "on",
      "correctness": {
        "useImportExtensions": "off",
        "noUnknownFunction": "off",
        "useExhaustiveDependencies": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "nursery": "off",
      "performance": {
        "noNamespaceImport": "off"
      },
      "security": {
        "noSecrets": "off"
      },
      "style": {
        "noDefaultExport": "off",
        "noDescendingSpecificity": "off"
      },
      "suspicious": {
        "useAwait": "off",
        "noAssignInExpressions": "off",
        "noConsole": "error"
      }
    }
  },
  "javascript": {
    "jsxRuntime": "reactClassic",
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
